<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import info.armado.ausleihe.client.controller.javafx.screen.OrganizerPanel?>

<fx:root stylesheets="@../stylesheets/ausleihe.css" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<VBox alignment="CENTER" fillWidth="false" prefHeight="767.0" prefWidth="1280.0" spacing="15.0" BorderPane.alignment="CENTER">
			<children>
				<GridPane hgap="10.0">
					<columnConstraints>
						<ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="-Infinity" />
						<ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
					</rowConstraints>
					<children>
						<Label styleClass="result-message" text="Suchbegriff:" />
						<Label fx:id="searchTermLabel" styleClass="result-message" text="Kein Suchbegriff angegeben." prefWidth="500.0" GridPane.columnIndex="1" />
					</children>
				</GridPane>
				<TableView fx:id="foundGamesTableView" prefHeight="600.0">
					<columns>
						<TableColumn fx:id="barcodeColumn" editable="false" prefWidth="110.0" resizable="false" sortable="false" text="Barcode" />
						<TableColumn fx:id="titleColumn" editable="false" prefWidth="500.0" resizable="false" sortable="false" text="Titel" />
						<TableColumn fx:id="authorColumn" editable="false" minWidth="0.0" prefWidth="200.0" resizable="false" sortable="false" text="Author" />
						<TableColumn fx:id="publisherColumn" editable="false" prefWidth="200.0" resizable="false" sortable="false" text="Verlag" />
						<TableColumn fx:id="minimumAgeColumn" editable="false" prefWidth="75.0" resizable="false" sortable="false" text="Mindestalter" />
						<TableColumn fx:id="playerCountColumn" editable="false" prefWidth="75.0" resizable="false" sortable="false" text="Spielerzahl" />
						<TableColumn fx:id="gameDurationColumn" editable="false" prefWidth="100.0" resizable="false" sortable="false" text="Spieldauer" />
						<TableColumn fx:id="lendColumn" editable="false" prefWidth="200.0" resizable="false" sortType="DESCENDING" sortable="true" text="Verliehen" />
					</columns>
					<sortOrder>
						<fx:reference source="lendColumn" />
					</sortOrder>
               <VBox.margin>
                  <Insets left="150.0" right="150.0" />
               </VBox.margin>
				</TableView>
			</children>
		</VBox>
	</center>
	<bottom>
		<OrganizerPanel />
	</bottom>
	<styleClass>
		<String fx:value="default-window" />
		<String fx:value="input-screen" />
	</styleClass>
</fx:root>
