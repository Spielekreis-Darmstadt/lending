<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<fx:root alignment="TOP_CENTER" type="VBox" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane alignment="TOP_CENTER" hgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label styleClass="result-message" text="Ausweis:" GridPane.halignment="RIGHT"/>
                <Label styleClass="result-message" text="Umschlag:" GridPane.halignment="RIGHT" GridPane.rowIndex="1"/>
                <Label fx:id="identityCardBarcodeLabel" styleClass="result-message" style="-fx-text-fill: red;"
                       text="Kein Ausweis gescannt." GridPane.columnIndex="1" GridPane.halignment="LEFT"/>
                <Label fx:id="envelopeBarcodeLabel" styleClass="result-message" style="-fx-text-fill: red;"
                       text="Kein Umschlag gescannt." GridPane.columnIndex="1" GridPane.halignment="LEFT"
                       GridPane.rowIndex="1"/>
            </children>
        </GridPane>
    </children>
</fx:root>
